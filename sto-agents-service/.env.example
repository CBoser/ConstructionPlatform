# STO Agents Service - Environment Variables
# Copy this file to .env and fill in the values

# ==============================================
# REQUIRED: MindFlow API Configuration
# ==============================================

# URL to your MindFlow Express backend
MINDFLOW_API_URL=https://your-backend.up.railway.app

# Service-to-service authentication token
# MUST match the PORTAL_SYNC_SECRET in your Express backend
PORTAL_SYNC_SECRET=your-32-character-secret-here

# ==============================================
# SUPPLYPRO PORTAL (Optional)
# ==============================================

# SupplyPro login credentials
SUPPLYPRO_USERNAME=
SUPPLYPRO_PASSWORD=
SUPPLYPRO_URL=https://portal.supplypro.com

# ==============================================
# ONEDRIVE/SHAREPOINT (Optional)
# ==============================================

# Microsoft Azure AD app registration
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=
ONEDRIVE_TENANT_ID=

# Folder to watch for new documents
ONEDRIVE_WATCH_FOLDER=/Plans/Incoming

# ==============================================
# LOCAL FILE SYSTEM (Optional)
# ==============================================

# Local path to watch for new documents (development only)
LOCAL_WATCH_PATH=

# ==============================================
# HYPHEN BUILDPRO (Future)
# ==============================================

# HYPHEN_USERNAME=
# HYPHEN_PASSWORD=
# HYPHEN_URL=
